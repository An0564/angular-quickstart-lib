{
  "name": "angular-quickstart-lib",
  "version": "1.0.0",
  "description": "Library QuickStart package.json from the documentation, supplemented with testing support",
  "main": "bundles/quickstart-lib.umd.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "",
  "license": "MIT",
  "repository": {},
  "engines": {
    "node": ">= 6.9.0",
    "npm": ">= 3.0.0"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "ngc -p tsconfig.lib.json && node inline-resources.js tsconfig.lib.json",
    "postbuild": "node bundle.js",
    "clean": "rimraf bundles out-tsc dist src/**/*.ngfactory.ts src/**/*.ngsummary.json src/**/*.ngstyle.ts",
    "pretest": "npm run clean && tsc -p tsconfig.spec.json && node inline-resources.js tsconfig.spec.json",
    "test": "karma start karma.conf.js --single-run",
    "pretest:watch": "npm run pretest",
    "test:watch": "concurrently \"tsc -w -p tsconfig.spec.json\" \"karma start karma.conf.js\"",
    "lint": "tslint ./src/**/*.ts -e ./src/**/*.ngfactory.* -t verbose"
  },
  "peerDependencies": {
    "@angular/core": ">=2.0.0 <5.0.0 || >=4.0.0-beta <5.0.0"
  },
  "devDependencies": {
    "@angular/common": "^4.0.0-rc.3",
    "@angular/compiler": "^4.0.0-rc.3",
    "@angular/compiler-cli": "^4.0.0-rc.3",
    "@angular/core": "^4.0.0-rc.3",
    "@angular/platform-browser": "^4.0.0-rc.3",
    "@angular/platform-browser-dynamic": "^4.0.0-rc.3",
    "@types/jasmine": "2.5.36",
    "@types/node": "^6.0.46",
    "concurrently": "^3.3.0",
    "glob": "^7.1.1",
    "jasmine-core": "^2.5.2",
    "karma": "^1.5.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-html-reporter": "^0.2.7",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.36.0",
    "rollup-plugin-uglify": "^1.0.1",
    "rxjs": "^5.0.1",
    "systemjs": "^0.19.40",
    "tslint": "^4.4.2",
    "typescript": "2.2.1",
    "zone.js": "^0.7.2"
  }
}
