{
  "name": "angular-quickstart-lib",
  "version": "1.0.0",
  "description": "Library QuickStart package.json from the documentation, supplemented with testing support",
  "main": "bundles/hero-profile.umd.js",
  "module": "src/index.js",
  "typings": "src/index.d.ts",
  "author": "",
  "license": "MIT",
  "repository": {},
  "scripts": {
    "prebuild": "npm run clean",
    "build": "ngc && node inline-resources.js \"src/**/*\" && rollup -c rollup-config.js",
    "clean": "rimraf bundles src/**/*.d.ts src/**/*.js src/**/*.js.map src/**/*.metadata.json src/**/*.ngsummary.json src/**/*.ngfactory.ts src/**/*.ngstyle.ts",
    "pretest": "npm run clean",
    "test": "tsc -p tsconfig.spec.json && karma start karma.conf.js --single-run",
    "test:watch": "tsc -p tsconfig.spec.json && concurrently \"tsc -w -p tsconfig.spec.json\" \"karma start karma.conf.js\"",
    "lint": "tslint ./src/**/*.ts -e ./src/**/*.ngfactory.* -t verbose"
  },
  "peerDependencies": {
    "@angular/core": ">=2.0.0 <5.0.0 || >=4.0.0-beta <5.0.0"
  },
  "devDependencies": {
    "@angular/common": "^2.4.8",
    "@angular/compiler": "^2.4.8",
    "@angular/compiler-cli": "^2.4.8",
    "@angular/core": "^2.4.8",
    "@angular/platform-browser": "^2.4.8",
    "@angular/platform-browser-dynamic": "^2.4.8",
    "@types/jasmine": "2.5.36",
    "@types/node": "^6.0.46",
    "concurrently": "^3.3.0",
    "glob": "^7.1.1",
    "jasmine-core": "^2.5.2",
    "karma": "^1.5.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-html-reporter": "^0.2.7",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.36.0",
    "rxjs": "^5.0.1",
    "systemjs": "^0.19.40",
    "tslint": "^4.4.2",
    "typescript": "~2.0.10",
    "zone.js": "^0.7.2"
  }
}
